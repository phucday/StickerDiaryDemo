<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddStickerFragment">

    <ScrollView
        android:id="@+id/layoutNote"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnAddSticker"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/layoutTextAndImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="633dp"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                >

            </LinearLayout>

            <FrameLayout
                android:id="@+id/layoutSticker"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            </FrameLayout>

        </FrameLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnAddSticker"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_6sdp"
        android:text="Add Sticker"
        />
    <Button
        android:id="@+id/btnAddStickerLocked"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_6sdp"
        android:text="Add StickerLocked"
        />

    <Button
        android:id="@+id/btnGetSticker"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnAddStickerLocked"
        app:layout_constraintLeft_toRightOf="@id/btnAddSticker"
        android:layout_marginStart="@dimen/_6sdp"
        android:text="Get Sticker"
        />

</androidx.constraintlayout.widget.ConstraintLayout>